<view class="container">

    <view class="goods-list">
        <view class="list-title" hidden='true'>商品信息</view>
        <view class="a-goods" wx:for-items="{{orderDetail.goods}}" wx:key="{{index}}"> </view>
        <view class="text-box">提货地点：{{orderDesc}}</view>
        <view class="text-box">预留信息：</view>
        <view class="info-box">{{username}} {{phone}}</view>
        <view class="info-box">{{roomid}}</view>

        <view class="a-goods" wx:for-items="{{orderDetail.goods}}" wx:key="{{index}}"> </view>
    </view>

    <view class="goods-info">
        <view class="row-box">
            <view class="row-label">商品金额</view>
            <view class="right-text">¥ {{allGoodsPrice}}</view>
        </view>
        <view class="row-box">
            <view class="row-label">运费</view>
            <view class="right-text">+ ¥ {{yunPrice}}</view>
        </view>
        <view class="row-box">
            <view class="row-label">应付总额</view>
            <view class="right-text">¥ {{totalPrice}}</view>
        </view>
    </view>

</view>